<Window x:Class="Lounge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lounge"
        mc:Ignorable="d"
        Title="Lounge" 
        Height="350" 
        Width="525" 
        WindowStartupLocation="CenterScreen" 
        WindowState="Maximized" 
        Loaded="Window_Loaded" 
        Closing="Window_Closing"
        Icon="app.ico" 
        >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <MediaElement 
            Name="AudioElement" 
            LoadedBehavior="Manual"
            Opacity="0" 
            MediaEnded="Media_Ended"
            MediaFailed="Media_Ended"/>

        <Grid 
            Name="Navigation"
            Grid.Row="0" 
            Grid.Column="0"
            Margin="4"
            >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button 
                x:Name="back" 
                Content="Back" 
                Grid.Column="0" 
                HorizontalAlignment="Stretch" 
                Click="back_Click" />

            <Button 
                x:Name="selectHome"
                Content="Home" 
                Grid.Column="1" 
                HorizontalAlignment="Stretch"
                Click="home_Click"
                />
            
            <Button 
                x:Name="selectAll"
                Content="Select All" 
                Grid.Column="2" 
                HorizontalAlignment="Stretch"
                Click="selectAll_Click"
                />
        </Grid>
        
        
        <DataGrid 
            Name="FoldersFiles"
            Grid.Row="1" 
            AutoGenerateColumns="False"
            Margin="10,10,10,10" 
            VerticalAlignment="Top" 
            SelectionChanged="FoldersFiles_SelectionChanged">

            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Selected" Binding="{Binding Selected}" />
                <DataGridTextColumn Header="Icon" Binding="{Binding Icon}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Name="settings" Grid.Row="1" Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="20" />
                <RowDefinition Height="20" />
                <RowDefinition Height="20" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="24" />
                <RowDefinition Height="30" />
                <RowDefinition Height="10" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <Label x:Name="AudioCount" Grid.Row="0" Content="No audio added" />
            <Label x:Name="PhotoCount" Grid.Row="1" Content="No photos added" />
            <Label x:Name="VideoCount" Grid.Row="2" Content="No videos added" />
            
            <ComboBox x:Name="audioDevices" Grid.Row="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="audioDevices_SelectionChanged" />
            <CheckBox x:Name="primaryMonitor" Grid.Row="4" Content="Primary Monitor" IsChecked="True" />
            <CheckBox x:Name="LEDs" Grid.Row="5" Content="Ardunio LEDs" IsChecked="True" />
            <CheckBox x:Name="loopAudio" Grid.Row="6" Content="Loop Audio" IsChecked="True" />
            <ListBox x:Name="LEDPatterns" Grid.Row="7" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
            <ListBox x:Name="visualizations" Grid.Row="8"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />


            <Slider x:Name="AudioVolume" Grid.Row="9" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Value=".5" Minimum="0" Maximum="1" ValueChanged="AudioVolume_ValueChanged"  />
            <Label x:Name="Audio"  Grid.Row="10" Content="Audio" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Button x:Name="AudioNext" Grid.Row="10" Content="Next" HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="80" Click="AudioNext_Click" />
            <Button x:Name="AudioPrior" Grid.Row="10" Content="Prior" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="80" Click="AudioPrior_Click" />

            <Button x:Name="play" Grid.Row="12" Content="Play" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="play_Click" IsDefault="True" />
            
        </Grid>
        
    </Grid>
</Window>
